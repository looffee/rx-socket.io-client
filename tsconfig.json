{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "module": "commonjs",
    "target": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "sourceMap": true,
    "listFiles": true,
    "listEmittedFiles": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "lib": [
      "es2018",
      "DOM"
    ],
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"]
}
